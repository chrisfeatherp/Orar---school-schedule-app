<?xml version="1.0" encoding="utf-8"?>



<resources>

    <style name="Theme.Orar" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/ActionBar.Orar</item>
        <item name="android:actionBarTabTextStyle">@style/ActionBar.TabText.Orar</item>
        <item name="android:actionBarTabStyle">@style/ActionBar.TabView.Orar</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Action bar -->
    <style name="ActionBar.Orar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@drawable/ab_background</item>
        <item name="android:backgroundSplit">@drawable/ab_split_background</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_background</item>
        <item name="android:displayOptions">showTitle</item>
        <item name="android:titleTextStyle">@style/ActionBar.TitleText.Orar</item>
    </style>

    <style name="ActionBar.TitleText.Orar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:textColor">#888</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ActionBar.TabText.Orar" parent="@style/Widget.AppCompat.Light.ActionBar.TabText">
        <item name="android:textColor">#888</item>
    </style>

    <style name="ActionBar.TabView.Orar" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_color_ab</item>
    </style>





</resources>