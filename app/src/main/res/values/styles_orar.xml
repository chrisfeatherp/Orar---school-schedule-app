<?xml version="1.0" encoding="utf-8"?>


<resources>

    <style name="Theme.Orar" parent="@style/Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/ActionBar.Orar</item>
        <item name="actionBarTabTextStyle">@style/ActionBar.TabText.Orar</item>
        <item name="actionBarTabStyle">@style/ActionBar.TabView.Orar</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Action bar -->
    <style name="ActionBar.Orar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@drawable/ab_background</item>
        <item name="backgroundSplit">@drawable/ab_split_background</item>
        <item name="backgroundStacked">@drawable/ab_stacked_background</item>
        <item name="displayOptions">showTitle</item>
        <item name="titleTextStyle">@style/ActionBar.TitleText.Orar</item>
    </style>

    <style name="ActionBar.TitleTextStyle.Orar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:textColor">#888</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ActionBar.TabText.Orar" parent="@style/Widget.AppCompat.Light.ActionBar.TabText">
        <item name="android:textColor">#888</item>
    </style>

    <style name="ActionBar.TabView.Orar" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="background">@drawable/tab_color_ab</item>
    </style>



</resources>